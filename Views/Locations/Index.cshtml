@model IEnumerable<CentricProject.Models.Location>

@{
    ViewBag.Title = "Location List";
}

<h2>Location List</h2>

<p>
    @Html.ActionLink("Create New Location", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.location)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.location)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.locationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.locationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.locationID })
        </td>
    </tr>
}

</table>
